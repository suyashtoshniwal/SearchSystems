@model IList<SearchSystems.Models.FixedDeposit>

@using PagedList.Mvc;
@{
    ViewBag.Title = "FD List";

}

<h2>Pending FD List</h2>

@using (Html.BeginForm("RenewFD", "FixedDeposits", FormMethod.Post))
{
    <input type="hidden" name="fdview" value="true" />

    <p></p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Bank Name")
            </th>
            <th>
                @Html.DisplayName("Account Name")
            </th>
            <th>
                @Html.DisplayName("FD Number")
            </th>
            <th>
                @Html.DisplayName("Amount")
            </th>
            <th>
                @Html.DisplayName("Rate of Interest")
            </th>
            <th>
                @Html.DisplayName("Date Of Purchase")
            </th>
            <th>
                @Html.DisplayName("Maturity Date")
            </th>
            <th>
                @Html.DisplayName("Maturity Amount")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th></th>
        </tr>

        @for (var i = 0; i < Model.Count; i++)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model[i].BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].FDNumber)
            </td>
            <td>
                @Html.EditorFor(modelItem => Model[i].Amount, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => Model[i].RateOfInterest, new { htmlAttributes = new { @class = "form-control",@style = "width: 100px;max-width: 900px;" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => Model[i].DateOfPurchase, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => Model[i].MaturityDate, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => Model[i].MaturityAmount, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].Status)
            </td>
            <td>
                @Html.HiddenFor(modelItem => Model[i].SerialNumber)
            </td>

            @*<td>
            @Html.CheckBoxFor(modelItem => Model[i].GratuityStatus, new { @class = "" })
        </td>*@
            @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>*@
        </tr>
        }
        <tr>
            <td colspan="5">
                <input type="submit" value="Submit" style="float:right ; class:noprint" />
            </td>
        </tr>
    </table>
}
